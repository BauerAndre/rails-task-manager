<div class="p-5 m-5">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
  <div class='d-flex'>
      <%=task.completed ? '☑️...' : '🔲...' %>
      <li><%= link_to task.title, task_path(task)%></li>
      <li><%=link_to "...🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
      <br>
      <br>
    </div>
    <% end %>
  </ul>

  <%= link_to "add new task", new_task_path %>
</div>
